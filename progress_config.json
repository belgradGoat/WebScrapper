  "evaluation_criteria": {
    "health_score_weights": {
      "file_activity": 30,
      "code_quality": 25,
      "recent_activity": 25,
      "code_volume": 20
    },
    "completion_thresholds": {
      "production_ready": {
        "min_lines": 1000,
        "requires_tests": true,
        "requires_docs": true,
        "requires_package": true
      },
      "beta_testing": {
        "min_lines": 500,
        "requires_package": true
      },
      "alpha_development": {
        "min_lines": 100
      },
      "early_development": {
        "min_lines": 1
      }
    },
    "file_patterns": {
      "ignore_patterns": [
        "node_modules",
        "__pycache__",
        ".git",
        ".DS_Store",
        "package-lock.json",
        ".pyc",
        ".log"
      ],
      "test_patterns": [
        "test",
        "tests",
        "spec",
        "__test__"
      ],
      "docs_patterns": [
        "readme",
        "docs",
        "documentation",
        ".md"
      ]
    }
  },
  "emo_project_settings": {
    "search_keywords": [
      "emo",
      "demo", 
      "remove",
      "emotion",
      "demonstration"
    ],
    "file_search_extensions": [
      ".py",
      ".js",
      ".html",
      ".md",
      ".txt"
    ],
    "fallback_projects": [
      "NC Parser",
      "WebScraper",
      "GimmeDaTools"
    ]
  },
  "reporting": {
    "default_format": "text",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "max_projects_in_summary": 10,
    "max_files_to_show": 10
  }
}